<div class="container">
<h1>Bitly Clone</h1>

<% if @url %>
<%= "ERROR: " + @url.errors.full_messages.first %>
<% end %>

<form name="shortener" method="post" action="/urls">
Long URL: <input type="text" name="long_url">
<input type="submit">
</form>

</div>

<div class="container">
  <font color="red"><p><%= @message if @message %></p></font>
  <form method="post" action="/sign_up">
    <p>New User Registration</p>
    Email: <input type="text" name="email">
    Password: <input type="password" name="password">
    <input type="submit">
  </form>
</div>

<div class="container">
    <font color="red"><p><%= @message2 if @message2 %></p></font>
  <form method="post" action="/login">
    <p>Login</p>
    Email: <input type="text" name="email">
    Password: <input type="password" name="password">
    <input type="submit">
  </form>
</div>
